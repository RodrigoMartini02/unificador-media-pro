{
  "name": "unificador-midia-pro-web",
  "version": "2.0.0",
  "description": "Unificador de Mídia Pro - Versão Web para unificar vídeos e áudios facilmente",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build completed for web version'",
    "deploy:heroku": "git push heroku main",
    "deploy:vercel": "vercel --prod",
    "test": "echo 'No tests specified'",
    "lint": "echo 'No linting configured'",
    "postinstall": "echo 'Installation completed successfully'"
  },
  "keywords": [
    "media",
    "video",
    "audio",
    "ffmpeg",
    "converter",
    "unifier",
    "web",
    "upload",
    "processing"
  ],
  "author": "Rodrigo",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodrigo/unificador-midia-pro.git"
  },
  "bugs": {
    "url": "https://github.com/rodrigo/unificador-midia-pro/issues"
  },
  "homepage": "https://github.com/rodrigo/unificador-midia-pro#readme",
  "heroku-postbuild": "echo 'Heroku build completed'",
  "vercel": {
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  },
  "config": {
    "unsafe-perm": true
  },
  "optionalDependencies": {
    "ffprobe-static": "^3.1.0"
  }
}
